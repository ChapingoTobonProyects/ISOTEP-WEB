@{
    ViewBag.Title = "Inicio";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background: #f8f6f3;
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #3a1a1a;
            margin: 0;
            padding: 0;
        }

        .main-container {
            max-width: 500px;
            margin: 80px auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(58,26,26,0.08);
            padding: 40px 30px 30px 30px;
            text-align: center;
        }

        h2 {
            color: #7b112c; /* Rojo vino */
            margin-bottom: 30px;
        }

        .btn {
            display: inline-block;
            padding: 12px 28px;
            margin: 10px 8px;
            font-size: 1.1em;
            font-weight: 600;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
        }

        .btn-admin {
            background: #7b112c; /* Rojo vino */
            color: #fff;
        }

            .btn-admin:hover {
                background: #a81d3a;
            }

        .btn-estudiante {
            background: #c9a13b; /* Dorado */
            color: #3a1a1a;
        }

            .btn-estudiante:hover {
                background: #e6c15c;
                color: #7b112c;
            }

        .uni-footer {
            margin-top: 40px;
            color: #7b112c;
            font-size: 0.95em;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <h2>Bienvenido al sistema ISOTEP</h2>
        <a class="btn btn-admin" href="@Url.Action("Practicantes", "Admin")">Ingresar como Administrador</a>
        <a class="btn btn-estudiante" href="@Url.Action("Buscar", "Consulta")">Consultar como Estudiante</a>
        <div class="uni-footer">
            Universidad Politecnica de Tecamac &copy; @DateTime.Now.Year
        </div>
    </div>
</body>
</html>